pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building'

                sh 'docker build -t ticket-frontend ${env.WORKSPACE}/frontend'
            }
        }

        stage('Test') {
            steps {
                echo 'testing'

                sh 'npm test --prefix ${env.WORKSPACE}/frontend -- --watchAll=false'
            }
       
        }

        stage('Deploy') {
            steps {
                echo 'deploying'
            }
        }
    }
}