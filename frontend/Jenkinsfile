pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building'

                sh 'docker build -t ticket-frontend ./frontend'
            }
        }

        stage('Test') {
            steps {
                echo 'testing'
                sh 'npm install --prefix ./frontend --silent'
                sh 'npm test --prefix ./frontend -- --watchAll=false'
                sh 'rm -r ./frontend/node_modules'
            }
       
        }

        stage('Deploy') {
            steps {
                echo 'deploying'
            }
        }
    }
}